{
  "name": "twp-tailwind",
  "version": "1.0.1",
  "description": "",
  "main": "tailwind.config.js",
  "scripts": {
    "development:tailwind:frontend": "tailwindcss -i src/tailwind/tailwind.css -o ./assets/css/tailwind.css",
    "development:esbuild": "npx esbuild ./src/main.js --target=esnext --bundle --outdir=./assets/js --out-extension:.js=.min.js",
    "development": "run-p \"development:**\"",
    "dev": "npm run development && grunt copy:build:files",
    "watch:tailwind:frontend": "npm run development:tailwind:frontend -- --watch",
    "watch:browser-sync": "browser-sync start --server --files \"**\" --no-notify --no-inject-changes",
    "watch": "run-p \"watch:**\"",
    "build": "npm run dev && grunt build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tagtwp/twp-tailwind.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^3.0.2",
    "esbuild": "0.20.0",
    "grunt": "^1.6.1",
    "grunt-cli": "^1.4.3",
    "grunt-contrib-compress": "^2.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "load-grunt-tasks": "^5.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^3.4.1"
  },
  "dependencies": {
    "animate.css": "3.7.2",
    "swiper": "^11.0.6",
    "wow.js-juzi": "^1.3.1"
  }
}
